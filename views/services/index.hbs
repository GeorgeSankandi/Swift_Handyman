<div class="row">
  {{#each services}}
    <div class="col-lg-4 col-md-6 mb-4">
      <div class="card h-100">
        <img src="{{imageUrl}}" class="card-img-top" alt="{{title}}" style="height: 220px; object-fit: cover;">
         {{#if this.onSale}}
            <div class="sale-badge">SALE</div>
        {{/if}}
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">{{title}}</h5>
           {{#if this.onSale}}
                <div class="timer-container">
                    <small>Ends in:</small>
                    <div class="countdown-timer" data-sale-end="{{this.saleEndDate}}"></div>
                </div>
            {{/if}}
          <h6 class="card-subtitle mb-2 text-muted">{{category}}</h6>
          <p class="card-text"><strong>Provider:</strong> {{provider.name}}</p>
          <p class="card-text"><strong>Price:</strong> N$ {{price}}</p>
          <a href="/services/{{_id}}" class="btn btn-primary mt-auto">View Details & Book</a>
        </div>
      </div>
    </div>
  {{else}}
    <p class="text-center">No services available at the moment.</p>
  {{/each}}
</div>