<div class="row gx-5">
    <div class="col-lg-7">
        <img src="{{service.imageUrl}}" class="img-fluid rounded mb-4" alt="{{service.title}}" style="box-shadow: var(--shadow); width: 100%; object-fit: cover;">
        <h1 class="mb-3">{{service.title}}</h1>
        <p class="text-muted">Category: {{service.category}}</p>
        <p><strong>Provided by:</strong> {{service.provider.name}}</p>
        <hr class="my-4">
        <h4>Service Description</h4>
        <p>{{service.description}}</p>
    </div>
    <div class="col-lg-5">
        <div class="card">
            <div class="card-body p-4">
                <h4 class="card-title text-center mb-4">Book this Service</h4>
                {{#if service.onSale}}
                    <div class="sale-badge-large">ON SALE!</div>
                    <div class="timer-container-large mb-3">
                        <small>Offer ends in:</small>
                        <div class="countdown-timer" data-sale-end="{{service.saleEndDate}}"></div>
                    </div>
                {{/if}}
                <h3 class="text-center text-danger mb-4">N$ {{service.price}}</h3>
                <form action="/bookings" method="POST">
                    <input type="hidden" name="serviceId" value="{{service._id}}">
                    <div class="mb-3">
                        <label for="bookingDate" class="form-label">Choose a Preferred Date</label>
                        <input type="date" class="form-control" id="bookingDate" name="bookingDate" required>
                    </div>
                    {{#if user}}
                        <button type="submit" class="btn btn-primary w-100 btn-lg">Request Booking</button>
                    {{else}}
                        <p class="text-center"><a href="/login">Login to your account</a> to book this service.</p>
                    {{/if}}
                </form>
            </div>
        </div>
    </div>
</div>

<!-- RELATED SERVICES SECTION -->
{{#if relatedServices}}
<hr class="my-5">
<h3 class="section-title mb-4">More in {{service.category}}</h3>
<div class="row">
    {{#each relatedServices}}
    <div class="col-lg-4 col-md-6 mb-4">
      <div class="card h-100">
        <img src="{{imageUrl}}" class="card-img-top" alt="{{title}}" style="height: 220px; object-fit: cover;">
         {{#if this.onSale}}
            <div class="sale-badge">SALE</div>
        {{/if}}
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">{{title}}</h5>
           {{#if this.onSale}}
                <div class="timer-container">
                    <small>Ends in:</small>
                    <div class="countdown-timer" data-sale-end="{{this.saleEndDate}}"></div>
                </div>
            {{/if}}
          <h6 class="card-subtitle mb-2 text-muted">{{category}}</h6>
          <p class="card-text"><strong>Provider:</strong> {{provider.name}}</p>
          <p class="card-text"><strong>Price:</strong> N$ {{price}}</p>
          <a href="/services/{{_id}}" class="btn btn-primary mt-auto">View Details</a>
        </div>
      </div>
    </div>
    {{/each}}
</div>
{{/if}}