<div class="container py-5">
    <div class="row justify-content-center mb-5">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4 p-md-5 text-center">
                    <div class="mb-4">
                        {{{service.icon_svg}}}
                    </div>
                    <h2 class="card-title mb-3">{{service.title}}</h2>
                    <div class="article-content">
                        <p class="lead text-muted">{{service.full_description}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- DB SERVICES LISTING SECTION -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="section-title mb-0">Available {{service.title}} Listings</h3>
        <a href="/services" class="btn btn-outline-secondary btn-sm">View All Categories</a>
    </div>

    <div class="row">
      {{#if services}}
        {{#each services}}
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <img src="{{imageUrl}}" class="card-img-top" alt="{{title}}" style="height: 220px; object-fit: cover;">
               {{#if this.onSale}}
                <div class="sale-badge">SALE</div>
              {{/if}}
              <div class="card-body d-flex flex-column">
                <h5 class="card-title">{{title}}</h5>
                 {{#if this.onSale}}
                    <div class="timer-container">
                        <small>Ends in:</small>
                        <div class="countdown-timer" data-sale-end="{{this.saleEndDate}}"></div>
                    </div>
                {{/if}}
                <p class="card-text text-muted small">Provider: {{provider.name}}</p>
                <p class="card-text">{{truncate description 100}}</p>
                <div class="mt-auto d-flex justify-content-between align-items-center">
                    <span class="text-primary fw-bold">N$ {{price}}</span>
                    <a href="/services/{{_id}}" class="btn btn-primary btn-sm">View Details</a>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      {{else}}
        <div class="col-12 text-center py-5">
            <div class="alert alert-light" role="alert">
                <h4 class="alert-heading">No Listings Yet</h4>
                <p>There are currently no service providers listed for {{service.title}}.</p>
                <hr>
                <p class="mb-0">Are you a {{service.title}} professional? <a href="/register">Register now</a> to list your services here!</p>
            </div>
        </div>
      {{/if}}
    </div>
</div>