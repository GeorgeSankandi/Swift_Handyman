<section class="py-5">
    <!-- Renamed this section title for better flow -->
    <h2 class="text-center section-title">Featured Services</h2>
    <div class="row">
      {{#if services}}
        {{#each services}}
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <img src="{{imageUrl}}" class="card-img-top" alt="{{title}}" style="height: 220px; object-fit: cover;">
               {{#if this.onSale}}
                <div class="sale-badge">SALE</div>
              {{/if}}
              <div class="card-body d-flex flex-column">
                <h5 class="card-title">{{title}}</h5>
                 {{#if this.onSale}}
                    <div class="timer-container">
                        <small>Ends in:</small>
                        <div class="countdown-timer" data-sale-end="{{this.saleEndDate}}"></div>
                    </div>
                {{/if}}
                <p class="card-text text-muted small">Provider: {{provider.name}}</p>
                <p class="card-text">{{truncate description 100}}</p>
                <a href="/services/{{_id}}" class="btn btn-primary mt-auto">View Details</a>
              </div>
            </div>
          </div>
        {{/each}}
      {{else}}
        <p class="text-center text-muted">No recent services to display at the moment.</p>
      {{/if}}
    </div>
</section>