<h1 class="display-5">Welcome, {{user.name}}</h1>
<p class="lead">Here are your booking requests.</p>
<hr>
<h3 class="section-title">My Bookings</h3>
{{#if bookings}}
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Service</th>
                <th>Provider</th>
                <th>Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            {{#each bookings}}
            <tr>
                <td><a href="/services/{{service._id}}">{{service.title}}</a></td>
                <td>{{provider.name}}</td>
                <td>{{formatDate bookingDate 'MMMM Do YYYY'}}</td>
                <td><span class="badge bg-secondary">{{status}}</span></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{else}}
<div class="card text-center p-4">
    <p class="mb-0">You have not made any bookings yet. <a href="/services">Browse services</a> to get started!</p>
</div>
{{/if}}