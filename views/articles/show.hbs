<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card">
            <img src="{{article.imageUrl}}" class="card-img-top" alt="{{article.title}}" style="max-height: 400px; object-fit: cover;">
            <div class="card-body p-4 p-md-5">
                <h1 class="card-title mb-3">{{article.title}}</h1>
                <p class="text-muted">Posted on {{formatDate article.createdAt 'MMMM Do, YYYY'}}</p>
                <hr class="my-4">
                <div class="article-content">
                    {{{article.content}}}
                </div>
                <hr class="my-4">
                <a href="/articles" class="btn btn-secondary">Back to All Articles</a>
            </div>
        </div>
    </div>
</div>