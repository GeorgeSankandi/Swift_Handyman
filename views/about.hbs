<div class="about-content">
    <!-- Mission Section -->
    <div class="row align-items-center mb-5 gx-5">
        <div class="col-lg-6">
            <img src="{{siteContent.about_mission_image}}" class="img-fluid rounded shadow-lg" alt="Team discussing a project">
        </div>
        <div class="col-lg-6">
            <h2 class="section-title">Our Mission</h2>
            <p class="lead">{{siteContent.about_mission_text}}</p>
        </div>
    </div>

    <!-- Vision Section -->
    <div class="row align-items-center mb-5 gx-5 flex-lg-row-reverse">
        <div class="col-lg-6">
            <img src="{{siteContent.about_vision_image}}" class="img-fluid rounded shadow-lg" alt="A handyman working with precision">
        </div>
        <div class="col-lg-6">
            <h2 class="section-title">Our Vision</h2>
            <p class="lead">{{siteContent.about_vision_text}}</p>
        </div>
    </div>

    <!-- Why Choose Us Section -->
    <div class="text-center my-5 py-5 bg-light rounded">
         <h2 class="section-title">Why Choose Us?</h2>
         <div class="row mt-4 px-3">
             <div class="col-md-3">
                 <h5>{{siteContent.about_why_1_title}}</h5>
                 <p class="text-muted">{{siteContent.about_why_1_text}}</p>
             </div>
             <div class="col-md-3">
                 <h5>{{siteContent.about_why_2_title}}</h5>
                 <p class="text-muted">{{siteContent.about_why_2_text}}</p>
             </div>
             <div class="col-md-3">
                 <h5>{{siteContent.about_why_3_title}}</h5>
                 <p class="text-muted">{{siteContent.about_why_3_text}}</p>
             </div>
             <div class="col-md-3">
                 <h5>{{siteContent.about_why_4_title}}</h5>
                 <p class="text-muted">{{siteContent.about_why_4_text}}</p>
             </div>
         </div>
    </div>
</div>


<!-- Our Team Section -->
<section class="team-section text-center py-5">
    <div class="container">
        <h2 class="section-title">Meet Our Team</h2>
        <p class="lead text-muted mb-5">The dedicated professionals behind Swift Handyman.</p>
        <div class="row g-4 justify-content-center">
            <!-- Team Member 1 -->
            {{#if siteContent.about_team_1_name}}
            <div class="col-lg-4 col-md-6">
                <div class="card h-100">
                    <img src="{{siteContent.about_team_1_image}}" alt="{{siteContent.about_team_1_name}}" class="card-img-top" style="height: 300px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{siteContent.about_team_1_name}}</h5>
                        <p class="card-text text-muted">{{siteContent.about_team_1_title}}</p>
                        <a href="/team/1" class="btn btn-primary mt-auto">View Profile</a>
                    </div>
                </div>
            </div>
            {{/if}}
            <!-- Team Member 2 -->
            {{#if siteContent.about_team_2_name}}
            <div class="col-lg-4 col-md-6">
                 <div class="card h-100">
                    <img src="{{siteContent.about_team_2_image}}" alt="{{siteContent.about_team_2_name}}" class="card-img-top" style="height: 300px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{siteContent.about_team_2_name}}</h5>
                        <p class="card-text text-muted">{{siteContent.about_team_2_title}}</p>
                        <a href="/team/2" class="btn btn-primary mt-auto">View Profile</a>
                    </div>
                </div>
            </div>
            {{/if}}
            <!-- Team Member 3 -->
            {{#if siteContent.about_team_3_name}}
            <div class="col-lg-4 col-md-6">
                <div class="card h-100">
                    <img src="{{siteContent.about_team_3_image}}" alt="{{siteContent.about_team_3_name}}" class="card-img-top" style="height: 300px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{siteContent.about_team_3_name}}</h5>
                        <p class="card-text text-muted">{{siteContent.about_team_3_title}}</p>
                        <a href="/team/3" class="btn btn-primary mt-auto">View Profile</a>
                    </div>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</section>