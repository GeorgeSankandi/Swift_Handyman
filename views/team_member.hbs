<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9 col-md-11">
            <div class="card overflow-hidden">
                <div class="row g-0">
                    <div class="col-md-5">
                        <img src="{{member.image}}" class="img-fluid" alt="{{member.name}}" style="object-fit: cover; height: 100%; min-height: 350px;">
                    </div>
                    <div class="col-md-7 d-flex flex-column">
                        <div class="card-body p-4 p-lg-5">
                            <h1 class="card-title display-5">{{member.name}}</h1>
                            <h4 class="card-subtitle mb-3 text-muted">{{member.title}}</h4>
                            <hr>
                            <div class="article-content">
                                <p>{{{member.bio}}}</p>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent p-4 p-lg-5 border-0 mt-auto">
                            <a href="/about" class="btn btn-secondary">Back to About Us</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>